---
// AdvertisingBanner.astro - Reusable advertising banner component for district pages
// This component displays a banner ad that can be customized per district
// Recommended image dimensions: 728px × 120px (Tall Leaderboard)
// or 970px × 120px (Large Tall Leaderboard) for desktop view

interface Props {
  district?: string;  // Optional district name to allow for district-specific ads
  city?: string;      // Optional city name for further customization
}

const { district = '', city = '' } = Astro.props;

// Function to determine which ad image to display
function getAdImagePath() {
  // Use the actual banner image instead of placeholder
  let adPath = '/images/spa-banner.jpg';
  
  // Logic for district-specific ads can be added here if needed
  // For example:
  // if (city === 'hanoi' && district === 'ba-dinh') {
  //   adPath = '/ads/ba-dinh-ad.jpg';
  // }
  
  return adPath;
}

const adImagePath = getAdImagePath();
const adUrl = 'https://www.bestspavietnam.com/';
---

<div class="advertising-banner my-8 w-full">
  <div class="relative overflow-hidden rounded-lg shadow-md">
    <!-- The actual ad banner with link -->
    <a href={adUrl} target="_blank" rel="noopener noreferrer" class="block">
      <picture>
        <source srcset={adImagePath.replace('.jpg', '.webp')} type="image/webp" />
        <img 
          src={adImagePath} 
          alt="Spa Services Advertisement" 
          class="w-full h-auto rounded-lg"
          loading="lazy"
        />
      </picture>
    </a>
    
    <!-- Optional: Add a small "Advertisement" label -->
    <div class="absolute top-0 right-0 bg-black bg-opacity-50 text-white text-xs px-2 py-1 rounded-bl-lg">
      Advertisement
    </div>
  </div>
</div>

<style>
  .advertising-banner {
    width: 100%;
    max-width: 970px;
    margin-left: auto;
    margin-right: auto;
    height: 120px;
    overflow: hidden;
  }
  
  @media (max-width: 768px) {
    .advertising-banner {
      /* For mobile, use a slightly different aspect ratio */
      height: auto;
      min-height: 70px;
    }
  }
</style>
